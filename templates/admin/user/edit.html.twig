{# templates/admin/user/edit.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Edit User
{% endblock %}

{% block body %}
	<div class="container bg-light align-items-center p-5 vh-100">
		<div class="row ">
			<div class="col-12 d-flex justify-content-center">
				<h5>Editar usuario</h5>
			</div>
		</div>
		<div class="row">
			<div class="col-12 d-flex justify-content-center">
				{{ form_start(form, {'attr': {'class': 'form w-50'}}) }}
    				{{ form_widget(form) }}
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary me-2">Guardar cambios</button>
                          <a class="btn btn-primary" href="{{ path('admin_user_index') }}"> Cancelar</a>
                    </div>
				{{ form_end(form) }}

			</div>

		</div>
	</div>

{% endblock %}
