{% extends 'base.html.twig' %}

{% block title %}Inicio de sesión
{% endblock %}

{% block body %}
	<div class="container d-flex justify-content-center align-items-center vh-100">
		<div class="card p-4 bg-dark text-white shadow-lg p-3 mb-5 rounded bg-opacity-50">
			{% if error %}
				<div class="alert alert-danger alert-dismissible fade show" role="alert">
					<strong>{{ error.messageKey|trans(error.messageData, 'security') }}</strong>
					<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
				</div>
			{% endif %}
			{{ form_start(formLogin, {'attr': {'class': 'form '}}) }}
			<div class="card-title h4 fw-bold d-flex justify-content-center">
				<span>Iniciar sesión</span>
			</div>

			<div class="form-group">
				{{ form_row(formLogin.usuario, {'attr': {'class': 'form-control'}}) }}
			</div>
			<div class="form-group">
				{{ form_row(formLogin.password, {'attr': {'class': 'form-control'}}) }}
			</div>

			<button type="submit" class="btn btn-primary">Inicar sesion</button>
			{{ form_end(formLogin) }}

		</div>

	</div>
{% endblock %}
